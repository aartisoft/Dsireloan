<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/hederbackground"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/imagelogo"
        app:civ_border_color="@color/white"
        app:civ_border_width="3dp" />

    <TextView
        android:id="@+id/textView_agent_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AG 224433"
        android:textColor="@color/whiteheadercolor"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pratik Patel"
        android:textColor="@color/whiteheadercolor"
        android:textSize="18dp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact: 9567543456"
        android:textColor="@color/whiteheadercolor"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/text_view_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="pratikpatel@smartloan.com"
        android:textColor="@color/whiteheadercolor"
        android:textSize="14dp" />
</LinearLayout>
